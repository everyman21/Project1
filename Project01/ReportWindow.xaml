<Window x:Class="Project01.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReportWindow" Height="300" Width="300" Loaded="Window_Loaded" MinHeight="300" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Test Report" Grid.Row="0" HorizontalAlignment="Left"/>   
        <TextBox x:Name="TestReportTextBox" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"/>
    </Grid>
</Window>
